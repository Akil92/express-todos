<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Todos</h1>
    <ul>
      <% todos.forEach(function(t) { %>
        <li>
          <a href="/todos/<%= t.id %>"><%= t.todo %></a>
          -
          <%= t.done ? "done" : "not done" %>
        </li>
        <% }); %>
   </ul>
   <h1><%= title %></h1>
   <p>Welcome to <%= title %></p>
 </body>
</html>
